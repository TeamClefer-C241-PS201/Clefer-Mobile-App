<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/Item_Article"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:translationY="1dp"
        android:translationZ="2dp"
        android:layout_margin="10dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp"
        app:strokeColor="@color/cleferGrey"
        >

        <LinearLayout
            android:background="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/image_view"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:scaleType="centerCrop"
                tools:src="@tools:sample/avatars" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:layout_marginStart="18dp">

                <TextView
                    android:id="@+id/title_article"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Judul Artikel"
                    style="@style/BoldHeadlineStyle"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/description_article"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Deskripsi Artikel"
                    style="@style/RegularSubHeadline" />

                <TextView
                    android:id="@+id/created_date_article"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="09 Desember 2024"
                    style="@style/MediumHeadline" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</RelativeLayout>
